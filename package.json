{
	"name": "template",
	"version": "0.0.0",
	"type": "module",
	"private": false,
	"packageManager": "pnpm@10.19.0",
	"scripts": {
		"clean": "rm -rf **/{.turbo,dist,coverage}",
		"clean-all": "rm -rf **/{node_modules,.turbo,dist,coverage}",
		"dev:web": "waku dev",
		"dev:tests": "vitest run --watch",
		"build": "waku build",
		"start": "waku start",
		"check:types": "tsc --noEmit",
		"check:tests": "vitest run --coverage --passWithNoTests",
		"nofix:prettier": "prettier --check --cache --cache-strategy metadata .",
		"fix:prettier": "prettier --write --cache --cache-strategy metadata .",
		"nofix:eslint": "eslint --cache --max-warnings 0 --no-warn-ignored",
		"fix:eslint": "eslint --cache --max-warnings 0 --no-warn-ignored --fix",
		"turbo:check-fix": "turbo check-fix",
		"turbo:check-nofix": "turbo check-nofix",
		"turbo:dev-web": "turbo dev:web",
		"turbo:dev-tests": "turbo dev:tests"
	},
	"dependencies": {
		"@base-ui/react": "^1.0.0",
		"@sindresorhus/slugify": "^3.0.0",
		"@stylexjs/stylex": "^0.17.4",
		"@types/node": "^25.0.6",
		"airtable": "^0.12.2",
		"react": "~19.2.3",
		"react-dom": "~19.2.3",
		"react-icons": "^5.5.0",
		"react-server-dom-webpack": "~19.2.3",
		"rehype-react": "^8.0.0",
		"rehype-sanitize": "^6.0.0",
		"rehype-stringify": "^10.0.1",
		"remark-breaks": "^4.0.0",
		"remark-gfm": "^4.0.1",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.2",
		"sharp": "^0.34.5",
		"unified": "^11.0.5",
		"waku": "1.0.0-alpha.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.3.0",
		"@commitlint/config-conventional": "^20.3.0",
		"@cspell/eslint-plugin": "^9.4.0",
		"@eslint/js": "^9.39.2",
		"@stylexjs/eslint-plugin": "^0.17.4",
		"@stylexjs/unplugin": "^0.17.4",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"@vitest/coverage-v8": "^4.0.16",
		"babel-plugin-react-compiler": "^1.0.0",
		"eslint": "^9.39.2",
		"eslint-plugin-only-warn": "^1.1.0",
		"eslint-plugin-perfectionist": "^5.2.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-compiler": "19.1.0-rc.2",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.26",
		"eslint-plugin-turbo": "^2.7.2",
		"globals": "^17.0.0",
		"husky": "^9.1.7",
		"jsdom": "^27.4.0",
		"prettier": "^3.7.4",
		"turbo": "^2.7.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.51.0",
		"vitest": "^4.0.16"
	}
}
