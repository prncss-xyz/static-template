{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "outputs": [
        "dist/**"
      ],
      "env": [
        "BASE_PATH",
        "DEV",
        "NODE_ENV"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "check:tests": {
      "outputs": [
        "coverage/**"
      ]
    },
    "check:knip": {},
    "check:types": {},
    "check:prettier": {},
    "check:eslint": {},
    "fix:prettier": {},
    "fix:eslint": {},
    "fix": {
      "dependsOn": [
        "check:knip",
        "check:types",
        "check:tests",
        "fix:prettier",
        "fix:eslint",
        "build"
      ]
    },
    "check": {
      "dependsOn": [
        "check:knip",
        "check:types",
        "check:tests",
        "check:prettier",
        "check:eslint",
        "build"
      ]
    },
    "dev:web": {
      "persistent": true,
      "cache": false
    },
    "dev:tests": {
      "persistent": true,
      "cache": false
    }
  }
}
